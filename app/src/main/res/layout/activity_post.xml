<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">


        <TextView
            android:id="@+id/choiceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200sp"
            android:layout_marginBottom="50sp"
            android:gravity="center"
            android:text="택시와 도보 중 선택해주세요!"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgTexi"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_marginRight="40sp"
                android:src="@drawable/by_texi" />

            <ImageView
                android:id="@+id/imgWalk"
                android:layout_width="300px"
                android:layout_height="300px"
                android:src="@drawable/by_walk" />

        </LinearLayout>

        <TextView
            android:id="@+id/selectTexi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="500sp"
            android:layout_marginBottom="50sp"
            android:gravity="center|bottom"
            android:text="택시의 경우 모집 인원은 4명으로 제한됩니다."
            android:textSize="18sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/selectWalk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="500sp"
            android:layout_marginBottom="50sp"
            android:gravity="center|bottom"
            android:text="도보의 경우 모집 인원 제한이 없습니다."
            android:textSize="18sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="530sp"
            android:layout_marginBottom="50sp"
            android:gravity="center|bottom"
            android:text="다음으로 넘어가 \n 출발지, 도착지, 모일시간을 설정해주세요."
            android:textSize="18sp"
            android:visibility="invisible" />

    </FrameLayout>


</LinearLayout>