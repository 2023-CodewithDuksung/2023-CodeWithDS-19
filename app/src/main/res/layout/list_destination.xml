<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="도착 장소 선택"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- 버튼을 눌렀을 때 처리할 내용 추가 -->
    <Button
        android:id="@+id/btnDestination1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="덕성여대 정문" />
    <Button
        android:id="@+id/btnDestination2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="덕성여대 후문" />
    <Button
        android:id="@+id/btnDestination3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가오리역" />
    <Button
        android:id="@+id/btnDestination4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4.19역" />
    <Button
        android:id="@+id/btnDestination5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="수유역" />
    <Button
        android:id="@+id/btnDestination6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="쌍문역" />

    <!-- 추가적인 위젯들이나 레이아웃을 필요에 따라 추가합니다. -->
    <!-- 예: 라디오 버튼, 리스트뷰, 기타 입력 필드 등 -->
</LinearLayout>
